<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Detail Transaksi</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
      }
      h1 {
        color: #333;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }
      th,
      td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
      }
      th {
        background-color: #f4f4f4;
      }
      .container {
        max-width: 800px;
        margin: auto;
      }
      .details {
        margin-bottom: 20px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Detail Transaksi</h1>
      <p>Status: <strong><%= status %></strong></p>
      <p>Pesan: <%= message %></p>

      <% for (const monthYear in transactions_data) { %>
      <h2><%= monthYear %></h2>
      <% transactions_data[monthYear].forEach(transaction => { %>
      <div class="details">
        <h3>Kode Booking: <%= transaction.booking_code %></h3>
        <p>Status Pembayaran: <%= transaction.booking_payment_status %></p>
        <p>Total Booking: <%= transaction.booking_amount %></p>
        <p>Durasi Penerbangan: <%= transaction.flight_duration %></p>
        <p>Keberangkatan: <%= transaction.departure_airport_city %></p>
        <p>Kedatangan: <%= transaction.arrival_airport_city %></p>
        <p>Jumlah Penumpang:</p>
        <ul>
          <li>Dewasa: <%= transaction.passangers_total.adult %></li>
          <li>Anak: <%= transaction.passangers_total.child %></li>
          <li>Bayi: <%= transaction.passangers_total.baby %></li>
        </ul>

        <h4>Tiket</h4>
        <p>
          Maskapai dan Kelas Kursi: <%=
          transaction.ticket.airline_and_seat_class %>
        </p>
        <p>Nomor Penerbangan: <%= transaction.ticket.flight_number %></p>
        <p>
          Keberangkatan: <%= transaction.ticket.flight_departure_airport_name %>
          (<%= transaction.ticket.departure_date %>, <%=
          transaction.ticket.departure_time %>)
        </p>
        <p>
          Kedatangan: <%= transaction.ticket.flight_arrival_airport_name %> (<%=
          transaction.ticket.arrival_date %>, <%=
          transaction.ticket.arrival_time %>)
        </p>
        <p>
          Harga Kelas Kursi: <%= transaction.ticket.seat_class_price.formatted
          %>
        </p>

        <h4>Rincian Jumlah</h4>
        <ul>
          <li>
            Dewasa: <%= transaction.ticket.amount_details.adults %> (<%=
            transaction.ticket.amount_details.adults_amount_total %>)
          </li>
          <% if (transaction.ticket.amount_details.children) { %>
          <li>
            Anak: <%= transaction.ticket.amount_details.children %> (<%=
            transaction.ticket.amount_details.children_amount_total %>)
          </li>
          <% } %> <% if (transaction.ticket.amount_details.babies) { %>
          <li>
            Bayi: <%= transaction.ticket.amount_details.babies %> (<%=
            transaction.ticket.amount_details.babies_amount_total %>)
          </li>
          <% } %>
          <li>Pajak: <%= transaction.ticket.amount_details.tax %></li>
          <li>
            Total: <%= transaction.ticket.amount_details.booking_amount_total %>
          </li>
        </ul>
      </div>
      <% }); %> <% } %>
    </div>
  </body>
</html>
